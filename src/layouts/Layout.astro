---
import Nav from "../components/Nav.astro";
import SideNav from "../components/SideNav.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap");

  html {
    scroll-behavior: smooth;
  }
  *,
  html {
    font-family:
      "Poppins",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  :root::-webkit-scrollbar {
    display: none;
  }

  .intro-fade {
    animation: fade-in 1s ease;
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 100;
    }
  }

  @media (max-width: 1024px) {
    html {
      scroll-behavior: auto;
    }
  }

  @media (max-height: 425px) and (orientation: landscape) {
    #hero {
      padding-top: 32px;
    }
  }
</style>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link id="favicon" rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <SideNav />
    <slot />
  </body>
</html>

<script>
  const favicon = document.getElementById("favicon") as HTMLLinkElement;

  function changeTitle(isAway: boolean) {
    if (isAway) {
      favicon.href = "/logo-upside-down.svg";
    } else {
      favicon.href = "/favicon.svg";
    }
  }

  window.addEventListener("blur", () => changeTitle(true));
  window.addEventListener("focus", () => changeTitle(false));
</script>
