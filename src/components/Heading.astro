---
export interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<header class="mb-2 md:mb-4">
  <h3
    class="text-4xl md:text-5xl text-center tracking-tighter font-bold dark:text-white"
  >
    {title}
  </h3>
  <h4
    class="text-2xl md:text-3xl text-center tracking-tighter font-bold text-gray-800 dark:text-zinc-700"
  >
    {subtitle}
  </h4>
</header>
