---
import javascript from "../assets/stack-icons/javascript.svg";
import typescript from "../assets/stack-icons/typescript.svg";
import trpc from "../assets/stack-icons/trpc.svg";
import astro from "../assets/stack-icons/astro.svg";
import zod from "../assets/stack-icons/zod.svg";
import typeorm from "../assets/stack-icons/typeorm.svg";
import mysql from "../assets/stack-icons/mysql.svg";
import vercel from "../assets/stack-icons/vercel.svg";
