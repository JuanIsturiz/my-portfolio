---
export interface Props {
  title: string;
  list: string[];
}

const { title, list } = Astro.props;
---

<div class="mb-4">
  <h5 class="text-lg font-semibold tracking-tighter">{title}</h5>
  <ul class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 opacity-90">
    {
      list.map((item) => (
        <li class="font-medium text-lg tracking-tighter">
          <span class="mr-0.5">&gt;</span>
          {item}
        </li>
      ))
    }
  </ul>
</div>
